<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.CommentMapper">
   <!-- 신호준 -->
   <select id="commentCount" resultType="int">
        SELECT
            COUNT(*)
        FROM COMMENT
    </select>
    
    <select id="commentList" resultType="CommentDto">
        SELECT
            *
        FROM COMMENT
    </select>
    
    
    <insert id="commentInsert" parameterType="CommentDto">
        INSERT INTO
        COMMENT (CNO, CHALLENGENO, MEMBERID, CONTENT, REG_DATE)
        VALUES(#{cno},#{bno},#{memberid},#{content},now()) 
    </insert>
    
    <update id="commentUpdate" parameterType="CommentDto">
        UPDATE COMMENT
            SET
            CONTENT = #{content}
        WHERE CNO = #{cno}
    </update>
    
    <delete id="commentDelete" parameterType="int">
        DELETE FROM COMMENT WHERE CNO = #{cno}
    </delete>
</mapper>