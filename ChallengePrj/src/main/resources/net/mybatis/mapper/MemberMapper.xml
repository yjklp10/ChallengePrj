<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.MemberMapper">
   
   <select id="idChk" resultType="MemberDto">
   		SELECT * FROM MEMBER WHERE MEMBERID = #{memberid}
   </select>
   
   <select id="nickChk" resultType="MemberDto">
   		SELECT * FROM MEMBER WHERE MEMBERID = #{membernick}
   </select>
	
	<insert id="insert" parameterType="MemberDto">
		INSERT INTO MEMBER VALUES(NULL,#{memberid}, #{memberpw}, #{memberemail}, #{membernick}, #{membername}, #{memberphone}, #{membergender}, #{memberrole}, 'n', NOW(), NULL)
	</insert>
	
</mapper>